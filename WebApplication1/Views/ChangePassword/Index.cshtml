@model CMSSample.DomainModel.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center><h3> Change Password </h3> </center>
                                <hr>
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <p class="text-center">
                                <label for="UserName" class="col-xs-2">User Name: </label>
                                <span class="font-weight-bold">
                                    @Html.DisplayFor(model => model.UserName, null)
                                </span>
                             </p>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Password, htmlAttributes: null)
                                <div class="form-group vw-100">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control-sm" } })
                                </div>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: null)
                                <div class="form-group vw-100">
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control-sm" } })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    @Html.ValidationSummary(false, "Please fix the following errors and submit the form:", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p class="text-danger">
                                    @if (@ViewBag.ChangePwdSuccess != null)
                                    {

                                        <label> @ViewBag.ChangePwdSuccess</label>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <center>
                                    <input type="submit" value="Update" class="btn btn-primary" />
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@model CMSSample.DomainModel.ViewModels.ODZCaseEditViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center><h3> Create Case </h3> </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.ODZCaseReference, htmlAttributes: null)
                                <div class="form-group">
                                    @Html.EditorFor(model => model.ODZCaseReference, new { htmlAttributes = new { @class = "form-control-sm", Value="" } })
                                </div>

                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.CaseCoverageAmount, htmlAttributes: null)
                                <div class="form-group">
                                    @Html.EditorFor(model => model.CaseCoverageAmount, new { htmlAttributes = new { @class = "form-control-sm", Value = "" } })
                                    <div></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.AssistedPerson, htmlAttributes: null)
                                <div class="form-group">
                                    @Html.EditorFor(model => model.AssistedPerson, new { htmlAttributes = new { @class = "form-control-sm" } })
                                </div>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.CaseDescription, htmlAttributes: null)
                                <div class="form-group">
                                    @Html.EditorFor(model => model.CaseDescription, new { htmlAttributes = new { @class = "form-control-sm" } })
                                    @Html.ValidationMessageFor(model => model.CaseDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.IncidentTypeID, htmlAttributes: null)
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.IncidentTypeID, new SelectList(Model.IncidentTypes, "Value", "Text"), new { htmlAttributes = new { @class = "form-control-sm" } })
                                </div>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.SelectedCountryofIncidentID, htmlAttributes: null)
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.SelectedCountryofIncidentID, new SelectList(Model.DZS, "Value", "Text"), new { htmlAttributes = new { @class = "form-control-sm" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    @Html.ValidationSummary(false, "Please fix the following errors and submit the form:", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <center>
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>                     
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
